<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="anchor-menu" prefHeight="607.0" prefWidth="864.0" stylesheets="@menuStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="diezMil.MenuController">
    <VBox alignment="CENTER" spacing="50.0" styleClass="styles.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label fx:id="title" alignment="CENTER" prefHeight="94.0" prefWidth="326.0" text="DIEZMIL">
            <font>
                <Font name="System Bold" size="65.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="100.0">
         <children>
            <Button fx:id="btn" mnemonicParsing="false" onAction="#showRules" text="Rules">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btn" mnemonicParsing="false" onAction="#loadGame" text="Load game">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#playNewGame" text="Play">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            <font>
               <Font size="48.0" />
            </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
